pipeline {
    agent any
    environment{
        PATH="$PATH:${TFPath()}"
    }
    stages {
        stage ("Git Checkout") {
            steps {
                git branch: "main", url: "https://github.com/abcdsantu/01_JTerraform.git"
            }
        }

        stage ("Create S3 for Backend TFstate files") {

            steps {
                script {
                    createS3BE("santu01-TFstate")

                }
            }
        }

        stage ("Initialise the Terraform and apply on workspace - Dev") {
            steps{
                sh returnStatus: true, script: 'terraform workspace new Sdev'
                sh "terraform init"
                sh "terraform apply -var-file=dev.tfvars -auto-approve"
                
            }
        }

        stage ("Initialise the Terraform and apply on workspace - Prod") {
            steps {
                sh returnStatus: true, script: 'terraform workspace new Sprod'
                sh "terraform init"
                sh "terraform apply -var-file=prod.tfvars -auto-approve"
            }
        }
    }
}

def TFPath () {
    def tfHome = tool name: 'terraform01', type: 'terraform'
    return tfHome 
}


def createS3BE(bucketName){
    sh returnStatus: true, script: 'aws s3 mb ${bucketName} --region=us-east-2'

}

