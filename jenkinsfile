pipeline {
     agent any
     environment {
        PATH = "${PATH}:${TFPath()}"
        }
     stages{
        stage('terraform init') {
            steps{
                sh "terraform init -reconfigure"
                
            }
        }
    }
}

def TFPath() {
    def tHome = tool name: 'terraform01', type: 'terraform'
    return tHome
}