pipeline {
     agent any
     environment {
        PATH = "${PATH}:${TFPath()}"
        }
     stages{
        stage('terraform init') {
            steps{
                sh "terraform init"
                sh "terraform apply -var-file=variables.tf -auto-approve"
            }
        }
    }
}

def TFPath() {
    def tHome = tool name: 'terraform01', type: 'terraform'
    return tHome
}